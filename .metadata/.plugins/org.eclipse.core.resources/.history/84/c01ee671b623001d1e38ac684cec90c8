package com.example.demo.model;

import javax.persistence.Entity;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Builder
@NoArgsConstructor
@AllArgsConstructor
@Data
@Entity
public class OrderEntity {   // 주문 엔터티
	private String orderId;   // 이 객체의 id
	private String orderNum;   // 주문번호
	private String userId;    // 이 객체를 생성한 유저의 id
	private String foodName;  // 유저가 주문한 음식 이름
	private String date;      // 주문 날짜 및 시간 
	
	private boolean isFull;  // 주문번호가 꽉 찼는지 체크(수용인원을 넘어섰는지)
	private int waitNum;  // 대기번호: 주문번호가 꽉차면(isFull이 true) 증가함, 다른 유저가 음식을 다 먹으면(자리가 생기면) 감소
}
